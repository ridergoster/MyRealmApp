<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/inputView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/inputTitle"
        android:layout_margin="20dp"
        android:text="INPUT VIEW"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nameTitle"
        android:text="Name: "
        android:layout_below="@+id/inputTitle"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameTitle"
        android:layout_toRightOf="@+id/nameTitle"
        android:layout_toEndOf="@+id/nameTitle"
        android:layout_margin="10dp"
        android:text="Google"/>

    <TextView
        android:id="@+id/urlTitle"
        android:text="URL: "
        android:layout_below="@+id/nameTitle"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/urlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/urlTitle"
        android:layout_toRightOf="@+id/urlTitle"
        android:layout_toEndOf="@+id/urlTitle"
        android:layout_margin="10dp"
        android:text="http://www.google.fr"/>

    <TextView
        android:id="@+id/descriptionTitle"
        android:text="Description: "
        android:layout_below="@+id/urlTitle"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/descriptionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/descriptionTitle"
        android:layout_toRightOf="@+id/descriptionTitle"
        android:layout_toEndOf="@+id/descriptionTitle"
        android:layout_margin="10dp"
        android:text="Un website vraiment cool"/>

    <Button
        android:gravity="center|center"
        android:text="SAVE URL"
        android:onClick="saveURL"
        android:clickable="true"
        android:padding="30dp"
        android:layout_margin="20dp"
        android:textAlignment="gravity"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>